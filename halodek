        // Current quiz state
        let currentCategory = 'general';
        let currentQuestions = [];
        let timeRemaining = 0;
        let timerInterval = null;

        // Application state
        let currentQuestion = 0;
        let score = 0;
        let userAnswers = [];
        let isAnswered = false;
        let allGameData = [];

        // Data handler for SDK
        const dataHandler = {
            onDataChanged(data) {
                allGameData = data;
                updateLeaderboard();
                console.log('Data updated:', data.length, 'records');
            }
        };

        // Initialize application
        async function initApp() {
            // Initialize Data SDK
            if (window.dataSdk) {
                const initResult = await window.dataSdk.init(dataHandler);
                if (!initResult.isOk) {
                    console.error('Failed to initialize data SDK');
                }
            }

            // Initialize Element SDK
            if (window.elementSdk) {
                await window.elementSdk.init({
                    defaultConfig,
                    render,
                    mapToCapabilities,
                    mapToEditPanelValues
                });
            }

            setupEventListeners();
            render(window.elementSdk?.config || defaultConfig);
            showPage('home');
        }

        // Render function for Element SDK
        async function render(config) {
            // Update text content
            const appTitleElements = document.querySelectorAll('#app-title');
            appTitleElements.forEach(el => {
                el.textContent = config.app_title || defaultConfig.app_title;
            });
            
            document.getElementById('quiz-title').textContent = config.quiz_title || defaultConfig.quiz_title;
            document.getElementById('welcome-message').textContent = config.welcome_message || defaultConfig.welcome_message;
            document.getElementById('completion-message').textContent = config.completion_message || defaultConfig.completion_message;

            // Update colors via CSS custom properties
            const root = document.documentElement;
            root.style.setProperty('--primary-gradient-start', config.primary_color || defaultConfig.primary_color);
            root.style.setProperty('--secondary-blue', config.secondary_color || defaultConfig.secondary_color);
            root.style.setProperty('--gray-50', config.background_color || defaultConfig.background_color);
            root.style.setProperty('--accent-green', config.accent_color || defaultConfig.accent_color);
            root.style.setProperty('--gray-800', config.text_color || defaultConfig.text_color);
        }

        // Capabilities mapping for Element SDK
        function mapToCapabilities(config) {
            return {
                recolorables: [
                    {
                        get: () => config.primary_color || defaultConfig.primary_color,
                        set: (value) => {
                            if (window.elementSdk) {
                                window.elementSdk.setConfig({ primary_color: value });
                            }
                        }
                    },
                    {
                        get: () => config.secondary_color || defaultConfig.secondary_color,
                        set: (value) => {
                            if (window.elementSdk) {
                                window.elementSdk.setConfig({ secondary_color: value });
                            }
                        }
                    },
                    {
                        get: () => config.background_color || defaultConfig.background_color,
                        set: (value) => {
                            if (window.elementSdk) {
                                window.elementSdk.setConfig({ background_color: value });
                            }
                        }
                    },
                    {
                        get: () => config.accent_color || defaultConfig.accent_color,
                        set: (value) => {
                            if (window.elementSdk) {
                                window.elementSdk.setConfig({ accent_color: value });
                            }
                        }
                    },
                    {
                        get: () => config.text_color || defaultConfig.text_color,
                        set: (value) => {
                            if (window.elementSdk) {
                                window.elementSdk.setConfig({ text_color: value });
                            }
                        }
                    }
                ],
                borderables: [],
                fontEditable: undefined,
                fontSizeable: undefined
            };
        }

        // Edit panel values mapping
        function mapToEditPanelValues(config) {
            return new Map([
                ["app_title", config.app_title || defaultConfig.app_title],
                ["quiz_title", config.quiz_title || defaultConfig.quiz_title],
                ["welcome_message", config.welcome_message || defaultConfig.welcome_message],
                ["completion_message", config.completion_message || defaultConfig.completion_message]
            ]);
        }

        // Setup event listeners
        function setupEventListeners() {
            // Mobile menu
            document.getElementById('mobile-menu-btn').addEventListener('click', openMobileMenu);
            document.getElementById('close-mobile-menu').addEventListener('click', closeMobileMenu);
            document.getElementById('mobile-menu-overlay').addEventListener('click', closeMobileMenu);

            // Quiz events
            document.getElementById('start-quiz-btn').addEventListener('click', startQuiz);
            document.getElementById('next-question').addEventListener('click', nextQuestion);
            document.getElementById('restart-quiz').addEventListener('click', restartQuiz);
            document.getElementById('view-history').addEventListener('click', showHistory);
            document.getElementById('back-to-results').addEventListener('click', showResults);

            // Login & Register events
            document.getElementById('login-form').addEventListener('submit', handleLoginSubmit);
            document.getElementById('register-form').addEventListener('submit', handleRegisterSubmit);
            document.getElementById('toggle-password').addEventListener('click', togglePasswordVisibility);

            // Navigation active states
            updateNavActiveStates();
        }

        // Page navigation
        function showPage(pageId) {
            const pages = ['home', 'quiz', 'leaderboard', 'help', 'login', 'register'];
            
            pages.forEach(id => {
                const page = document.getElementById(`${id}-page`);
                if (id === pageId) {
                    page.classList.remove('hidden');
                } else {
                    page.classList.add('hidden');
                }
            });

            // Close mobile menu
            closeMobileMenu();
            
            // Update navigation active states
            updateNavActiveStates(pageId);
            
            // Scroll to top
            window.scrollTo(0, 0);

            // Load page-specific data
            if (pageId === 'leaderboard') {
                loadLeaderboard();
            } else if (pageId === 'register') {
                resetRegisterForm();
            } else if (pageId === 'login') {
                resetLoginForm();
            }
        }

        // Update navigation active states
        function updateNavActiveStates(activePage = 'home') {
            const navLinks = document.querySelectorAll('.nav-link, .mobile-nav-link');
            navLinks.forEach(link => {
                if (link.classList.contains('nav-link')) {
                    // Desktop navigation - always white text
                    link.classList.remove('text-blue-300', 'text-blue-600', 'font-bold');
                    link.classList.add('text-white');
                } else if (link.classList.contains('mobile-nav-link')) {
                    // Mobile navigation - gray text
                    link.classList.remove('text-blue-600', 'font-bold');
                    link.classList.add('text-gray-700');
                }
            });

            // Set active link
            const activeLinks = document.querySelectorAll(`[onclick="showPage('${activePage}')"]`);
            activeLinks.forEach(link => {
                if (link.classList.contains('nav-link')) {
                    // Desktop active - still white but with light blue tint and bold
                    link.classList.remove('text-blue-300', 'text-blue-600');
                    link.classList.add('text-blue-200', 'font-bold');
                } else if (link.classList.contains('mobile-nav-link')) {
                    // Mobile active - blue text
                    link.classList.remove('text-gray-700');
                    link.classList.add('text-blue-600', 'font-bold');
                }
            });
        }

        // Mobile menu functions
        function openMobileMenu() {
            document.getElementById('mobile-menu').classList.add('open');
            document.getElementById('mobile-menu-overlay').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeMobileMenu() {
            document.getElementById('mobile-menu').classList.remove('open');
            document.getElementById('mobile-menu-overlay').classList.add('hidden');
            document.body.style.overflow = '';
        }

        // Category selection
        function selectCategory(categoryId) {
            currentCategory = categoryId;
            const category = quizCategories[categoryId];
            currentQuestions = [...category.questions];
            
            // Update welcome screen with category info
            document.getElementById('category-icon').textContent = category.icon;
            document.getElementById('category-name').textContent = category.name;
            document.getElementById('category-description').textContent = category.description;
            document.getElementById('time-limit').textContent = category.timeLimit + 's';
            document.getElementById('difficulty-level').textContent = category.difficulty;
            
            showQuizScreen('welcome-screen');
        }

        // Quiz functions
        function startQuiz() {
            currentQuestion = 0;
            score = 0;
            userAnswers = [];
            timeRemaining = quizCategories[currentCategory].timeLimit;
            
            showQuizScreen('quiz-screen');
            displayQuestion();
        }

        function showQuizScreen(screenId) {
            const screens = ['category-screen', 'welcome-screen', 'quiz-screen', 'results-screen', 'history-screen'];
            
            screens.forEach(id => {
                const element = document.getElementById(id);
                if (id === screenId) {
                    element.classList.remove('hidden');
                    element.classList.add('fade-in');
                } else {
                    element.classList.add('hidden');
                }
            });
        }

        function displayQuestion() {
            const question = currentQuestions[currentQuestion];
            isAnswered = false;
            
            // Clear any existing timer
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            
            // Reset timer
            timeRemaining = quizCategories[currentCategory].timeLimit;
            updateTimerDisplay();
            startTimer();
            
            // Update progress
            const progress = ((currentQuestion + 1) / currentQuestions.length) * 100;
            document.getElementById('progress-bar').style.width = `${progress}%`;
            document.getElementById('question-counter').textContent = `Pertanyaan ${currentQuestion + 1} dari ${currentQuestions.length}`;
            
            // Display question with animation
            const questionText = document.getElementById('question-text');
            questionText.style.opacity = '0';
            setTimeout(() => {
                questionText.textContent = question.question;
                questionText.style.opacity = '1';
                questionText.style.transition = 'opacity 0.5s ease-in';
            }, 100);
            
            // Create answer options
            const optionsContainer = document.getElementById('answer-options');
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.className = 'card-question w-full text-left group p-4 sm:p-6';
                button.id = `option-${index}`;
                
                const optionContent = document.createElement('div');
                optionContent.className = 'flex items-center';
                
                const optionIcon = document.createElement('div');
                optionIcon.className = 'w-8 sm:w-10 h-8 sm:h-10 bg-gradient-to-r from-gray-100 to-gray-200 group-hover:from-blue-100 group-hover:to-purple-100 rounded-lg sm:rounded-xl flex items-center justify-center mr-3 sm:mr-4 transition-all duration-300 font-semibold text-gray-700 group-hover:text-blue-700 text-sm sm:text-base';
                optionIcon.textContent = String.fromCharCode(65 + index);
                
                const optionText = document.createElement('span');
                optionText.className = 'font-medium text-gray-800 group-hover:text-gray-900 transition-colors duration-300 text-sm sm:text-lg';
                optionText.textContent = option;
                
                optionContent.appendChild(optionIcon);
                optionContent.appendChild(optionText);
                button.appendChild(optionContent);
                
                button.addEventListener('click', () => selectAnswer(index));
                
                // Add staggered animation
                button.style.opacity = '0';
                button.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    button.classList.add('fade-in');
                    button.style.opacity = '1';
                    button.style.transform = 'translateY(0)';
                }, 150 + (index * 100));
                
                optionsContainer.appendChild(button);
            });
            
            // Hide feedback and next button
            document.getElementById('feedback').classList.add('hidden');
            document.getElementById('next-question').classList.add('hidden');
        }

        // Timer functions
        function startTimer() {
            timerInterval = setInterval(() => {
                timeRemaining--;
                updateTimerDisplay();
                
                if (timeRemaining <= 0) {
                    clearInterval(timerInterval);
                    if (!isAnswered) {
                        timeUp();
                    }
                }
            }, 1000);
        }

        function updateTimerDisplay() {
            const timerDisplay = document.getElementById('timer-display');
            timerDisplay.textContent = timeRemaining + 's';
            
            // Change color based on remaining time
            if (timeRemaining <= 5) {
                timerDisplay.className = 'font-bold text-red-600 text-sm sm:text-base animate-pulse';
            } else if (timeRemaining <= 10) {
                timerDisplay.className = 'font-bold text-orange-600 text-sm sm:text-base';
            } else {
                timerDisplay.className = 'font-bold text-green-600 text-sm sm:text-base';
            }
        }

        function timeUp() {
            isAnswered = true;
            
            // Disable all options
            const options = document.querySelectorAll('#answer-options button');
            options.forEach(button => {
                button.disabled = true;
                button.style.pointerEvents = 'none';
                button.style.opacity = '0.5';
            });
            
            // Show correct answer
            const question = currentQuestions[currentQuestion];
            const correctOption = document.getElementById(`option-${question.correct}`);
            if (correctOption) {
                correctOption.classList.add('correct');
                correctOption.style.opacity = '1';
            }
            
            // Record as wrong answer
            const answerData = {
                question_id: question.id,
                user_answer: "Waktu Habis",
                correct_answer: question.options[question.correct],
                is_correct: false,
                completed_at: new Date().toISOString(),
                user_name: "Anonymous",
                score: 0,
                total_questions: 1,
                quiz_type: currentCategory
            };
            
            userAnswers.push(answerData);
            
            // Show feedback
            showFeedback(false, question);
            
            // Save to Data SDK
            saveAnswer(answerData);
        }

        async function selectAnswer(selectedIndex) {
            if (isAnswered) return;
            
            isAnswered = true;
            
            // Stop timer
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            
            const question = currentQuestions[currentQuestion];
            const isCorrect = selectedIndex === question.correct;
            
            if (isCorrect) {
                score++;
            }
            
            // Store user answer
            const answerData = {
                question_id: question.id,
                user_answer: question.options[selectedIndex],
                correct_answer: question.options[question.correct],
                is_correct: isCorrect,
                completed_at: new Date().toISOString(),
                user_name: "Anonymous",
                score: isCorrect ? 1 : 0,
                total_questions: 1,
                quiz_type: currentCategory
            };
            
            userAnswers.push(answerData);
            
            // Update UI
            const options = document.querySelectorAll('#answer-options button');
            options.forEach((button, index) => {
                button.disabled = true;
                button.style.pointerEvents = 'none';
                
                if (index === question.correct) {
                    button.classList.add('correct');
                } else if (index === selectedIndex && !isCorrect) {
                    button.classList.add('incorrect');
                } else {
                    button.style.opacity = '0.5';
                    button.style.transform = 'scale(0.98)';
                }
            });
            
            // Show feedback
            showFeedback(isCorrect, question);
            
            // Save to Data SDK
            await saveAnswer(answerData);
        }

        function showFeedback(isCorrect, question) {
            const feedbackContainer = document.getElementById('feedback-container');
            const feedbackText = document.getElementById('feedback-text');
            const explanationText = document.getElementById('explanation-text');
            
            if (isCorrect) {
                feedbackContainer.className = 'p-4 sm:p-6 rounded-2xl mb-4 bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 scale-in';
                feedbackText.innerHTML = '<span class="text-xl sm:text-2xl mr-3">✅</span>Benar! Jawaban Anda tepat.';
                feedbackText.className = 'font-semibold text-base sm:text-lg text-green-800 flex items-center justify-center mb-4';
            } else {
                feedbackContainer.className = 'p-4 sm:p-6 rounded-2xl mb-4 bg-gradient-to-r from-red-50 to-rose-50 border border-red-200 scale-in';
                feedbackText.innerHTML = `<span class="text-xl sm:text-2xl mr-3">❌</span>Salah. Jawaban yang benar adalah: <strong>${question.options[question.correct]}</strong>`;
                feedbackText.className = 'font-semibold text-base sm:text-lg text-red-800 flex items-center justify-center text-center mb-4';
            }
            
            // Show explanation
            explanationText.textContent = question.explanation || 'Tidak ada penjelasan tersedia.';
            
            document.getElementById('feedback').classList.remove('hidden');
            
            // Show next button
            setTimeout(() => {
                if (currentQuestion < currentQuestions.length - 1) {
                    document.getElementById('next-question').classList.remove('hidden');
                } else {
                    document.getElementById('next-question').textContent = 'Lihat Hasil';
                    document.getElementById('next-question').classList.remove('hidden');
                }
            }, 1000);
        }

        async function saveAnswer(answerData) {
            // Show loading
            showLoading(true);
            
            // Save to Data SDK
            if (window.dataSdk && allGameData.length < 999) {
                const result = await window.dataSdk.create(answerData);
                if (!result.isOk) {
                    console.error('Failed to save answer:', result.error);
                }
            } else if (allGameData.length >= 999) {
                // Show warning about data limit
                console.warn('Data limit reached (999 records). Cannot save more answers.');
            }
            
            showLoading(false);
        }

        function nextQuestion() {
            if (currentQuestion < currentQuestions.length - 1) {
                currentQuestion++;
                displayQuestion();
            } else {
                showResults();
            }
        }

        function showResults() {
            console.log('Showing results - Score:', score, 'Total Questions:', currentQuestions.length);
            
            // Clear any remaining timer
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            
            const totalQuestions = currentQuestions.length;
            const percentage = (score / totalQuestions) * 100;
            const wrongAnswers = totalQuestions - score;
            
            console.log('Results calculated - Percentage:', percentage, 'Wrong:', wrongAnswers);
            
            // Update result display with force refresh
            const finalScoreEl = document.getElementById('final-score');
            const correctAnswersEl = document.getElementById('correct-answers');
            const wrongAnswersEl = document.getElementById('wrong-answers');
            const accuracyEl = document.getElementById('accuracy-percentage');
            
            if (finalScoreEl) finalScoreEl.textContent = score;
            if (correctAnswersEl) correctAnswersEl.textContent = score;
            if (wrongAnswersEl) wrongAnswersEl.textContent = wrongAnswers;
            if (accuracyEl) accuracyEl.textContent = Math.round(percentage) + '%';
            
            const resultIcon = document.getElementById('result-icon');
            const resultEmoji = document.getElementById('result-emoji');
            const resultTitle = document.getElementById('result-title');
            const performanceBadge = document.getElementById('performance-badge');
            const badgeIcon = document.getElementById('badge-icon');
            const badgeText = document.getElementById('badge-text');
            
            // Performance evaluation with console logging
            console.log('Setting performance based on percentage:', percentage);
            
            if (percentage >= 90) {
                if (resultIcon) resultIcon.className = 'w-24 sm:w-32 h-24 sm:h-32 bg-gradient-to-br from-yellow-100 to-yellow-200 rounded-full flex items-center justify-center mx-auto mb-6 sm:mb-8 bounce-in shadow-2xl';
                if (resultEmoji) resultEmoji.textContent = '🏆';
                if (resultTitle) resultTitle.textContent = 'Sempurna!';
                if (performanceBadge) performanceBadge.className = 'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800';
                if (badgeIcon) badgeIcon.textContent = '👑';
                if (badgeText) badgeText.textContent = 'Master Quiz';
            } else if (percentage >= 80) {
                if (resultIcon) resultIcon.className = 'w-24 sm:w-32 h-24 sm:h-32 bg-gradient-to-br from-green-100 to-green-200 rounded-full flex items-center justify-center mx-auto mb-6 sm:mb-8 bounce-in shadow-2xl';
                if (resultEmoji) resultEmoji.textContent = '🎉';
                if (resultTitle) resultTitle.textContent = 'Luar Biasa!';
                if (performanceBadge) performanceBadge.className = 'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-green-100 text-green-800';
                if (badgeIcon) badgeIcon.textContent = '⭐';
                if (badgeText) badgeText.textContent = 'Excellent';
            } else if (percentage >= 60) {
                if (resultIcon) resultIcon.className = 'w-24 sm:w-32 h-24 sm:h-32 bg-gradient-to-br from-blue-100 to-blue-200 rounded-full flex items-center justify-center mx-auto mb-6 sm:mb-8 bounce-in shadow-2xl';
                if (resultEmoji) resultEmoji.textContent = '👍';
                if (resultTitle) resultTitle.textContent = 'Bagus!';
                if (performanceBadge) performanceBadge.className = 'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-blue-100 text-blue-800';
                if (badgeIcon) badgeIcon.textContent = '👏';
                if (badgeText) badgeText.textContent = 'Good Job';
            } else if (percentage >= 40) {
                if (resultIcon) resultIcon.className = 'w-24 sm:w-32 h-24 sm:h-32 bg-gradient-to-br from-orange-100 to-orange-200 rounded-full flex items-center justify-center mx-auto mb-6 sm:mb-8 bounce-in shadow-2xl';
                if (resultEmoji) resultEmoji.textContent = '📚';
                if (resultTitle) resultTitle.textContent = 'Terus Belajar!';
                if (performanceBadge) performanceBadge.className = 'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-orange-100 text-orange-800';
                if (badgeIcon) badgeIcon.textContent = '💪';
                if (badgeText) badgeText.textContent = 'Keep Trying';
            } else {
                if (resultIcon) resultIcon.className = 'w-24 sm:w-32 h-24 sm:h-32 bg-gradient-to-br from-red-100 to-red-200 rounded-full flex items-center justify-center mx-auto mb-6 sm:mb-8 bounce-in shadow-2xl';
                if (resultEmoji) resultEmoji.textContent = '🎯';
                if (resultTitle) resultTitle.textContent = 'Jangan Menyerah!';
                if (performanceBadge) performanceBadge.className = 'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-red-100 text-red-800';
                if (badgeIcon) badgeIcon.textContent = '🚀';
                if (badgeText) badgeText.textContent = 'Practice More';
            }
            
            // Animate stars based on score
            setTimeout(() => {
                for (let i = 1; i <= 5; i++) {
                    const star = document.getElementById(`score-star-${i}`);
                    if (star && i <= score) {
                        setTimeout(() => {
                            star.style.transform = 'scale(1.3)';
                            star.style.color = '#fbbf24';
                            setTimeout(() => {
                                star.style.transform = 'scale(1)';
                            }, 200);
                        }, i * 200);
                    }
                }
            }, 500);
            
            console.log('About to show results screen');
            showQuizScreen('results-screen');
            
            // Force scroll to top of results
            setTimeout(() => {
                const resultsScreen = document.getElementById('results-screen');
                if (resultsScreen) {
                    resultsScreen.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            }, 100);
        }

        function showHistory() {
            console.log('Showing history - User answers:', userAnswers.length);
            
            const historyList = document.getElementById('history-list');
            historyList.innerHTML = '';
            
            if (userAnswers.length === 0) {
                historyList.innerHTML = `
                    <div class="text-center py-8">
                        <div class="text-4xl mb-4">📝</div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Belum Ada Riwayat</h3>
                        <p class="text-gray-600">Selesaikan kuis untuk melihat riwayat jawaban Anda.</p>
                    </div>
                `;
                showQuizScreen('history-screen');
                return;
            }
            
            userAnswers.forEach((answer, index) => {
                const item = document.createElement('div');
                item.className = 'bg-gray-50 rounded-lg p-4 border hover-lift';
                
                // Find question from current questions
                const question = currentQuestions.find(q => q.id === answer.question_id);
                const statusIcon = answer.is_correct ? '✅' : '❌';
                const statusColor = answer.is_correct ? 'text-green-600' : 'text-red-600';
                
                const questionText = question ? question.question : 'Pertanyaan tidak ditemukan';
                const explanation = question ? question.explanation : '';
                
                item.innerHTML = `
                    <div class="flex items-start justify-between mb-3">
                        <span class="font-medium text-gray-800 text-sm sm:text-base">Pertanyaan ${index + 1}</span>
                        <span class="${statusColor} font-bold text-lg">${statusIcon}</span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-700 mb-3 font-medium">${questionText}</p>
                    <div class="text-xs sm:text-sm space-y-2">
                        <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
                            <p><strong class="text-gray-900">Jawaban Anda:</strong> <span class="${answer.is_correct ? 'text-green-700' : 'text-red-700'}">${answer.user_answer}</span></p>
                            ${!answer.is_correct ? `<p><strong class="text-gray-900">Jawaban Benar:</strong> <span class="text-green-700">${answer.correct_answer}</span></p>` : ''}
                        </div>
                        ${explanation ? `
                            <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mt-3">
                                <p class="text-blue-800"><strong>💡 Penjelasan:</strong> ${explanation}</p>
                            </div>
                        ` : ''}
                    </div>
                `;
                
                historyList.appendChild(item);
            });
            
            showQuizScreen('history-screen');
        }

        function restartQuiz() {
            // Clear timer
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            
            // Reset quiz state
            currentQuestion = 0;
            score = 0;
            userAnswers = [];
            isAnswered = false;
            
            // Show category selection
            showQuizScreen('category-screen');
        }

        // Modal functions
        function showContactModal() {
            document.getElementById('contact-modal').classList.remove('hidden');
            document.getElementById('modal-overlay').classList.remove('hidden');
        }

        function showFeedbackModal() {
            document.getElementById('feedback-modal').classList.remove('hidden');
            document.getElementById('modal-overlay').classList.remove('hidden');
        }

        function showAboutModal() {
            document.getElementById('about-modal').classList.remove('hidden');
            document.getElementById('modal-overlay').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('contact-modal').classList.add('hidden');
            document.getElementById('feedback-modal').classList.add('hidden');
            document.getElementById('about-modal').classList.add('hidden');
            document.getElementById('modal-overlay').classList.add('hidden');
        }

        // Login form functions
        function handleLoginSubmit(event) {
            event.preventDefault();
            
            const submitBtn = document.getElementById('login-submit');
            const btnText = document.getElementById('login-btn-text');
            const loading = document.getElementById('login-loading');
            
            // Show loading state
            btnText.classList.add('hidden');
            loading.classList.remove('hidden');
            submitBtn.disabled = true;
            
            // Simulate login process
            setTimeout(() => {
                // Hide form and show success
                document.getElementById('login-form').classList.add('hidden');
                document.getElementById('login-success').classList.remove('hidden');
                
                // Reset button state
                btnText.classList.remove('hidden');
                loading.classList.add('hidden');
                submitBtn.disabled = false;
            }, 2000);
        }

        function resetLoginForm() {
            document.getElementById('login-form').classList.remove('hidden');
            document.getElementById('login-success').classList.add('hidden');
            document.getElementById('login-form').reset();
        }

        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('login-password');
            const eyeIcon = document.getElementById('eye-icon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                `;
            } else {
                passwordInput.type = 'password';
                eyeIcon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                `;
            }
        }

        // Register form functions
        function handleRegisterSubmit(event) {
            event.preventDefault();
            
            const submitBtn = document.getElementById('register-submit');
            const btnText = document.getElementById('register-btn-text');
            const loading = document.getElementById('register-loading');
            
            // Show loading state
            btnText.classList.add('hidden');
            loading.classList.remove('hidden');
            submitBtn.disabled = true;
            
            // Simulate registration process
            setTimeout(() => {
                // Hide form and show success
                document.getElementById('register-form').classList.add('hidden');
                document.getElementById('register-success').classList.remove('hidden');
                
                // Reset button state
                btnText.classList.remove('hidden');
                loading.classList.add('hidden');
                submitBtn.disabled = false;
            }, 2000);
        }

        function resetRegisterForm() {
            document.getElementById('register-form').classList.remove('hidden');
            document.getElementById('register-success').classList.add('hidden');
            document.getElementById('register-form').reset();
        }

        function showLoading(show) {
            const loading = document.getElementById('loading');
            if (show) {
                loading.classList.remove('hidden');
            } else {
                loading.classList.add('hidden');
            }
        }

        // Leaderboard functions
        function loadLeaderboard() {
            updateLeaderboard();
        }

        function updateLeaderboard() {
            const leaderboardList = document.getElementById('leaderboard-list');
            const leaderboardEmpty = document.getElementById('leaderboard-empty');
            
            if (allGameData.length === 0) {
                leaderboardList.classList.add('hidden');
                leaderboardEmpty.classList.remove('hidden');
                return;
            }
            
            leaderboardEmpty.classList.add('hidden');
            leaderboardList.classList.remove('hidden');
            
            // Process data for leaderboard
            const playerStats = {};
            
            allGameData.forEach(record => {
                const playerName = record.user_name || 'Anonymous';
                if (!playerStats[playerName]) {
                    playerStats[playerName] = {
                        name: playerName,
                        totalScore: 0,
                        totalQuestions: 0,
                        gamesPlayed: 0
                    };
                }
                
                playerStats[playerName].totalScore += record.is_correct ? 1 : 0;
                playerStats[playerName].totalQuestions += 1;
                playerStats[playerName].gamesPlayed += 1;
            });
            
            // Convert to array and sort
            const sortedPlayers = Object.values(playerStats)
                .map(player => ({
                    ...player,
                    percentage: (player.totalScore / player.totalQuestions) * 100
                }))
                .sort((a, b) => b.percentage - a.percentage || b.totalScore - a.totalScore);
            
            // Update stats
            document.getElementById('total-players').textContent = sortedPlayers.length;
            document.getElementById('total-games').textContent = allGameData.length;
            document.getElementById('avg-score').textContent = 
                sortedPlayers.length > 0 
                    ? Math.round(sortedPlayers.reduce((sum, p) => sum + p.percentage, 0) / sortedPlayers.length) + '%'
                    : '0%';
            
            // Render leaderboard
            leaderboardList.innerHTML = '';
            
            sortedPlayers.slice(0, 10).forEach((player, index) => {
                const item = document.createElement('div');
                item.className = 'leaderboard-item p-4 sm:p-6 flex items-center justify-between';
                
                const rank = index + 1;
                let rankClass = 'rank-other';
                if (rank === 1) rankClass = 'rank-1';
                else if (rank === 2) rankClass = 'rank-2';
                else if (rank === 3) rankClass = 'rank-3';
                
                item.innerHTML = `
                    <div class="flex items-center space-x-4">
                        <div class="rank-badge ${rankClass}">
                            ${rank}
                        </div>
                        <div>
                            <div class="font-semibold text-gray-900 text-sm sm:text-base">${player.name}</div>
                            <div class="text-xs sm:text-sm text-gray-500">${player.gamesPlayed} games played</div>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="font-bold text-gray-900 text-sm sm:text-lg">${Math.round(player.percentage)}%</div>
                        <div class="text-xs sm:text-sm text-gray-500">${player.totalScore}/${player.totalQuestions}</div>
                    </div>
                `;
                
                leaderboardList.appendChild(item);
            });
        }

        // Help page functions
        function toggleFaq(element) {
            const faqItem = element.parentElement;
            const answer = faqItem.querySelector('.faq-answer');
            const icon = element.querySelector('.faq-icon');
            
            faqItem.classList.toggle('open');
            
            if (faqItem.classList.contains('open')) {
                answer.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            } else {
                answer.classList.add('hidden');
                icon.style.transform = 'rotate(0deg)';
            }
        }

        // Initialize app when DOM is loaded
        document.addEventListener('DOMContentLoaded', initApp);

        // Handle window resize for mobile optimization
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) {
                closeMobileMenu();
            }
        });
    </script>
